{
    "redVersion": "9",
    "cli": {
        "cwlVersion": "v1.0",
        "class": "CommandLineTool",
        "baseCommand": "python3",
        "inputs": {
            "script": {
                "type": "File",
                "inputBinding": {
                    "position": 0
                }
            },
            "data": {
                "type": "File",
                "inputBinding": {
                    "position": 1
                }
            }
        },
        "outputs": {
            "output_directory": {
                "type": "Directory",
                "outputBinding": {
                    "glob": "outputs/"
                }
            }
        },
        "stdout": "stdout.txt",
        "stderr": "stderr.txt"
    },
    "inputs": {
        "script": {
            "class": "File",
            "connector": {
                "command": "red-connector-ssh",
                "access": {
                    "host": "{{host_ip}}",
                    "port": 22,
                    "auth": {
                        "username": "{{ssh_username}}",
                        "password": "{{ssh_password}}"
                    },
                    "filePath": "~/input/test.py"
                }
            }
        },
        "data": {
            "class": "File",
            "connector": {
                "command": "red-connector-ssh",
                "access": {
                    "host": "{{host_ip}}",
                    "port": 22,
                    "auth": {
                        "username": "{{ssh_username}}",
                        "password": "{{ssh_password}}"
                    },
                    "filePath": "~/input/data.txt"
                }
            }
        }
    },
    "outputs": {
        "output_directory": {
            "class": "Directory",
            "connector": {
                "command": "red-connector-ssh",
                "access": {
                    "host": "{{host_ip}}",
                    "port": 22,
                    "auth": {
                        "username": "{{ssh_username}}",
                        "password": "{{ssh_password}}"
                    },
                    "dirPath": "outputs/"
                }
            }
        }
    },
    "container": {
        "engine": "docker",
        "settings": {
            "image": {
                "url": "dprobst/curious_containers:python"
            },
            "ram": 256
        }
    },
    "execution": {
        "engine": "ccagency",
        "settings": {
            "access": {
                "url": "{{agency_url}}",
                "auth": {
                    "username": "{{agency_user}}",
                    "password": "{{agency_password}}"
                }
            }
        }
    }
}